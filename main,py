import sqlfuncs
import os

def main():
    # Code to be executed
    sqlfuncs.checkdatabase()
    choice = 0
    while choice != 5:
        print("1. Look at todays schedule")
        print("2. Look at a specific dates schedule")
        print("3. Look at weeks schedule")
        print("4. Add a todo")
        print("5. Exit")
        print("")
        print("What would you like to do:")
        choice = input()
        if choice ==1:
             sqlfuncs.gettoday()
             os.system("pause")      
        elif choice ==2:
             break
        elif choice ==3:
             break      
        elif choice ==4:
             break       
        elif choice ==5:
            print("Goodbye")
            break 


if __name__ == "__main__":
        main()